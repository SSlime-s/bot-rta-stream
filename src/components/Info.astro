---
import classNames from 'classnames'
import { twMerge } from 'tailwind-merge'

export interface Props {
  className?: string
}

const { className } = Astro.props
const formattedClassName = className
  ?.split(' ')
  .filter(name => !name.startsWith('astro-'))
  .join(' ')

const baseClass = classNames(
  'text-black',
  'text-3xl',
  'font-yusei',
  'flex',
  'flex-col',
  'm-auto',
  'text-left',
  'gap-2'
)
const mergedClass = twMerge(baseClass, formattedClassName)
---

<div class={mergedClass}>
  <p>Any% - Rust</p>
  <p>PC - 2023</p>
</div>
