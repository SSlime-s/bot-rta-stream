---
import { twMerge } from 'tailwind-merge'

export interface Props {
  className?: string
}

const { className } = Astro.props
const formattedClassName = className
  ?.split(' ')
  .filter(name => !name.startsWith('astro-'))
  .join(' ')

const baseClass = 'wrap'
const mergedClass = twMerge(baseClass, formattedClassName)
---

<main class={mergedClass}></main>

<style>
  .wrap {
    aspect-ratio: 16 / 9;
    width: 100%;
    margin: auto;
    max-height: 100%;
    border: 4px solid #d8829d;
  }
</style>
